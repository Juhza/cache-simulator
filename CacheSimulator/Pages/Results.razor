@using CacheSimulator.Entities
<h3>Results</h3>

<div class="mt-2 row">
    <div class="col">
        <h5>Selected configuration</h5>
        <div>
            <label>Number of blocks:</label> @Cache.BlockSizeDecimal
        </div>
        <div>
            <label>Cache block size (words):</label> @Cache.WordSizeDecimal
        </div>
        <div>
            <label>Cache size (words):</label> @Cache.CacheSize
        </div>
    </div>

    <div class="col">
        <div>
            Total de Acessos: @Cache.accesses
        </div>
        <div>
            Acertos: @Cache.hits (@(GetPercentage(Cache.hits, Cache.accesses))%)
        </div>
        <div>
            Faltas: @Cache.misses (@(GetPercentage(Cache.misses, Cache.accesses))%)
        </div>
    </div>
</div>

@code {
    [Parameter]
    public novo.Cache Cache { get; set; }

    private string GetPercentage(int misses, int accesses)
    {
        var result = (misses / Convert.ToDouble(accesses));
        return (result * 100).ToString("N2");
    }
}
